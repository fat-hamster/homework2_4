      xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <TextArea fx:id="textArea" editable="false" focusTraversable="false" prefHeight="178.0" prefWidth="495.0"
             VBox.vgrow="ALWAYS"/>
   <HBox>
      <TextField fx:id="textField" onAction="#onSendButton" prefHeight="26.0" prefWidth="519.0" HBox.hgrow="ALWAYS"/>
      <Button mnemonicParsing="false" onAction="#onSendButton" onMouseReleased="#onSendButton" prefHeight="26.0"
              prefWidth="104.0" text="Отправить"/>
   </HBox>
</VBox>
